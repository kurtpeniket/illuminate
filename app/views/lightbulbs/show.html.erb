<div class="container show-container p-3">
  <div class="card-trip">
    <img src= <%= @lightbulb.image %> />
    <div class="card-trip-infos">
      <div>
        <h2><%= @lightbulb.brand %></h2>
        <p><%= @lightbulb.bulb_type %></p>
        <p><%= @lightbulb.fitting %></p>
        <p><%= @lightbulb.brightness %> lumens</p>
        <%= link_to '', lightbulb_favourites_path(@lightbulb), method: :post, class: "fas fa-heart" %>
      </div>
      <%= link_to "Buy now", @lightbulb.url, class: "btn btn-lg btn-secondary my-3" %>
      <h3 class="font-weight-bold my-4"><%= @lightbulb.price %></h3>
      <%= if @lightbulb.brand == 'Screwfix'
        image_tag "screwfix.png", class:"card-trip-user avatar-bordered"
      else
        image_tag "b&q.png", class:"card-trip-user avatar-bordered"
      end %>
    </div>
    <div class="my-1" id="map"
    style="width: 100%; height: 50vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
    <hr>
    <div class="d-flex justify-content-around"><p><%= @lightbulb.brand %></p><h2 class="card-trip-pricing"><%= @lightbulb.price %></h2><%= image_tag "screwfix.png", class: "card-trip-user avatar-bordered" %><%= link_to "Buy now", @lightbulb.url, class: "btn btn-secondary" %></div>
    <hr>
    <div class="d-flex justify-content-around"><p>B&Q</p><h2 class="card-trip-pricing">£9.99</h2><%= image_tag "b&q.png", class: "card-trip-user avatar-bordered" %><a href="https://www.screwfix.com/p/tcp-la60e2oww2527-led-gls-es-smart-light-bulb-warm-white-8w-806lm/828hk" class="btn btn-secondary">Buy now</a></div>
    <hr>
    <div class="d-flex justify-content-around"><p>Argos</p><h2 class="card-trip-pricing">£9.99</h2><%= image_tag "argos.png", class: "card-trip-user avatar-bordered" %><a class="btn btn-secondary">Buy now</a></div>
    <hr>
    <div class="d-flex justify-content-around"><p>Homebase</p><h2 class="card-trip-pricing">£9.99</h2><%= image_tag "homebase.jpg", class: "card-trip-user avatar-bordered" %><a class="btn btn-secondary">Buy now</a></div>
    <hr>
  </div>
</div>
